<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.planitgo_finalproject.ui.details_attraction.DetailsAttractionFragment"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/backImg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      />
    <ImageButton
        android:id="@+id/detailsBackBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:background="@drawable/white_bg"
        android:layout_marginStart="32dp"
        android:layout_marginTop="37dp"
        android:contentDescription="back icon"
        app:layout_constraintStart_toStartOf="@id/backImg"
        app:layout_constraintTop_toTopOf="@id/backImg"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backImg"
        android:layout_marginTop="-40dp"
        android:background="@drawable/top_corner_bg">
        <TextView
            android:id="@+id/titleAttraction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowColor="@color/dark_blue"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Title"
            android:fontFamily="@font/poppins_semibold"
            android:padding="8dp"
            android:textSize="27sp"/>
        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/poppins_regular"
            android:drawableStart="@drawable/distance_20px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleAttraction"
            android:drawableTint="@color/blue"
            android:text="Address"
            android:textSize="18sp"
            android:elegantTextHeight="true"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/grayContainer"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_margin="20dp"
            android:elevation="8dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:background="@drawable/grey_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location">
            <TextView
                android:id="@+id/clockImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/open_and_closing_time"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:drawableStart="@drawable/hour"
                android:elegantTextHeight="true"
                android:gravity="center"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/clockImg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/clockImg"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="center"
                    android:text="8:00 - 21:00"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_medium"/>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/descTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@+id/grayContainer"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"/>

        <TextView
            android:id="@+id/descText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:fontFamily="@font/poppins_regular"
            android:text="need to be the text"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/price"
            app:layout_constraintTop_toBottomOf="@+id/descTitle"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12$"
            android:textSize="24sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="50dp"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:numStars="5"
            android:stepSize="0.5"
            android:progressTint="@color/rating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>